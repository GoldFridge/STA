@model Sibers_test_app.Domain.Entities.Employee

<h2>Редактирование проекта</h2>
<form asp-action="edit" asp-controller="Employee" asp-route-id="@Model.Id">
    <p>
        <label asp-for="FirstName">Имя</label><br />
        <input type="text" asp-for="FirstName" />
    </p>
    <p>
        <label asp-for="MiddleName">Отчество</label><br />
        <input type="text" asp-for="MiddleName" />
    </p>
    <p>
        <label asp-for="LastName">Фамилия</label><br />
        <input type="text" asp-for="LastName" />
    </p>
    <p>
        <label asp-for="Email">Email</label><br />
        <input type="text" asp-for="Email" />
    </p>
    <p>
        <input type="submit" value="Сохранить" />
    </p>
</form>